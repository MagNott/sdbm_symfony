{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
    <h1 class="text-center my-5">{% trans %}Sorry, something went wrong{% endtrans %}</h1>


        <div class="example-wrapper mx-auto">
        <center>
		<img
		src="{{ asset('images/caissesBiere.jpg') }}" class="img-fluid" alt="Photo d'un homme en équilibre sur une grande pile de caisse de bière"/>
        </center>
		</div>

    <p class="text-center my-5">
       {% trans %} Internal server error{% endtrans %} <a href="{{ path('app_main') }}"><button class="btn btn-warning sm">{% trans %} return to the homepage{% endtrans %}</button></a>
    </p>
{% endblock %}