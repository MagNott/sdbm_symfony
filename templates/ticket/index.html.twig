{% extends 'base.html.twig' %}

{% block title %}<h2>Ticket index</h2>{% endblock %}

{% block body %}

<div class='container'>

{#Inclusion du formulaire de création dans la vue index#}
 {{ include('ticket/_new.html.twig', {'button_label': 'Create'}) }}


    <table class="table">
        <thead>
            <tr>
                <th>Année</th>
                <th>Numero de ticket</th>
                <th>Date de la vente</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.annee }}</td>
                <td>{{ ticket.numeroTicket }}</td>
                <td>{{ ticket.dateVente ? ticket.dateVente|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    {# <a href="{{ path('app_ticket_show', {'annee': ticket.annee}) }}">show</a> #}

                    <a href="{{ path('app_ticket_edit', {'annee': ticket.annee}) }}"><button class="btn btn-info">Modifier</button></a>

                    {#Ici c'est le bouton du formulaire pour supprimer#}
                     {{ include('ticket/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_ticket_new') }}">Create new</a> #}

    </div>
{% endblock %}
