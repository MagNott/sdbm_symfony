<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous"> 
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <link rel="icon" src="{{ asset('favicon.ico') }}" type="image/x-icon">
        {% block stylesheets %}{% endblock %}

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
		{% block javascripts %}{% endblock %}
	</head>
	<body>
        <header>
        <nav class="navbar navbar-expand-lg bg-primary bg-gradient rounded-bottom-2" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="{{ asset('favicon.ico') }}">
                    <strong class="me-5">SDBM</strong>
                </a>
                <!-- TOGGLER -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Liens -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link me-4" href="{{ path('app_main') }}">Accueil</a>
                        </li>

                        <li class="nav-item">
                            <strong><a class="nav-link" href="{{ path('app_article_index') }}">Articles</a></strong>
                        </li>
                        <li class="nav-item">
                            <strong><a class="nav-link me-4" href="{{ path('app_ticket_index') }}">Tickets</a></strong>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_marque_index') }}">Marques</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_fabricant_index') }}">Fabricants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_couleur_index') }}">Couleurs</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_typebiere_index') }}">Types de bière</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_pays_index') }}">Pays</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_continent_index') }}">Continents</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        </header>
		{% block body %}{% endblock %}
	</body>
</html>
