{% extends 'base.html.twig' %}

{% block title %}Continent index{% endblock %}

{% block body %}
    <h1>Continent index</h1>

    <div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Code</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for continent in continents %}
            <tr>
                <td>{{ continent.idContinent }}</td>
                <td>{{ continent.nomContinent }}</td>
                <td>
                    <a href="{{ path('app_continent_show', {'idContinent': continent.idContinent}) }}">show</a>
                    <a href="{{ path('app_continent_edit', {'idContinent': continent.idContinent}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    <a href="{{ path('app_continent_new') }}">Create new</a>
{% endblock %}
