{% extends 'base.html.twig' %}

{% block title %}Continent index{% endblock %}

{% block body %}

<div class="container">
{#Inclusion du formulaire de cr√©ation dans la vue index#}
{{ include('continent/_new.html.twig', {'button_label': 'Create'}) }}

    <h2 class="text-center shadow bg-warning-subtle">Liste des continents</h2>

    
    <table class="table table-warning table-hover table-striped text-center table-sm shadow-lg">
        <thead>
            <tr>
                <th>Code</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for continent in continents %}
            <tr>
                <td>{{ continent.idContinent }}</td>
                <td>{{ continent.nomContinent }}</td>
                <td class="d-flex">
                    {# <a href="{{ path('app_continent_show', {'idContinent': continent.idContinent}) }}">show</a> #}
                    <a href="{{ path('app_continent_edit', {'idContinent': continent.idContinent}) }}"><button class="btn btn-info btn-sm bi bi-pencil-square m-1"></button></a>

                   {{ include('continent/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    

    {# <a href="{{ path('app_continent_new') }}">Create new</a> #}
    </div>
{% endblock %}
