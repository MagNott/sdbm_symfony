{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
	<style>
		.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
		.example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
	</style>
<h1 class="text-center my-5" >Société des Bières du Monde vous accueille sur son site !</h1>
	<div class="example-wrapper">
		

		<img src="{{ asset('images/biere.jpg') }}" class="img-fluid" alt="Photo stylisée d'une bière et de blé"/>


		<table class="text-center my-5">
			<th>Continent</th> 
			<th>Nombre de bières</th>
             <tbody> 
			{% for item in continents_bieres %}
                <tr>
                    <td>{{ item.nom }}</td>
                    <td>{{ item.marqueCount }}</td>
                </tr>
	{% endfor %}
             </tbody>
		</table>

		<table class="text-center my-5">
			<th>Couleurs</th> 
			<th>Nombre de bières</th>
             <tbody> 
			{% for item in couleurs_bieres %}
                <tr>
                    <td>{{ item.nom }}</td>
                    <td>{{ item.Nombre_de_bieres }}</td>
                </tr>
	{% endfor %}
             </tbody>
		</table>

        
		<table class="text-center my-5">
			<th>Fabricants</th> 
			<th>Nombre de bières</th>
             <tbody> 
			{% for item in fabricants_bieres %}
                <tr>
                    <td>{{ item.nom }}</td>
                    <td>{{ item.Nombre_de_bieres }}</td>
                </tr>
	{% endfor %}
             </tbody>
		</table>

	
</div>
{% endblock %}
