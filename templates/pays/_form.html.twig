{{ form_start(form) }}
    {# {{ form_widget(form) }} #}

    <form>
	<div class="d-flex justify-content-center">
		<div class="row">
        <div class="form-group col-md-4">
				{{ form_label(form.nomPays) }}
				{{ form_errors(form.nomPays) }}
				{{ form_widget(form.nomPays) }}
			</div>
			<div class="form-group col-md-4">
				{{ form_label(form.idContinent) }}
				{{ form_errors(form.idContinent) }}
				{{ form_widget(form.idContinent) }}
			</div>
			<div class="form-group col-md-4">
				<button class="btn btn-success btn-sm mt-4 ms-5">
					<i class="bi bi-file-earmark-plus me-1"></i>
					{{ button_label|default('Ajouter') }}</button>
			</div>
		</div>
	</div>
	{{ form_rest(form) }}
